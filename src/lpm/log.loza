ns lpm

@doc "Print info texts"
func print_info(string $txt)
    if LPM_LOG_INFO
        print $txt
    endif
endfunc

@doc "Print logs texts"
func print_log(string $txt)
    if LPM_LOG_LOG
        print $txt
    endif
endfunc

@doc "Print warnings"
func print_warn(string $txt)
    if LPM_LOG_WARN
        perror $txt
    endif
endfunc

@doc "Print errors"
func print_err(string $txt)
    if LPM_LOG_ERR
        perror $txt
    endif
endfunc

endns
